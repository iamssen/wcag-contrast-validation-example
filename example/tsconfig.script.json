{
  "compilerOptions": {
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "target": "ES2018",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "create-github-comment": [
        "../../packages/src/create-github-comment"
      ],
      "create-github-comment/*": [
        "../../packages/src/create-github-comment/*"
      ]
    }
  },
  "include": [
    "src",
    "scripts"
  ]
}
